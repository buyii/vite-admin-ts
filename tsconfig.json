{
  "compilerOptions": {
    "composite": true,
    "types": ["vite/client"],
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx","src/*.vue", "src/**/*.vue","auto-imports.d.ts","vite.config.ts","env.d.ts"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
